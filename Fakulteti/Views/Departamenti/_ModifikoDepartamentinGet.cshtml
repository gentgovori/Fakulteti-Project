@model Fakulteti.Models.DepartamentiList.DepartamentLista
@using (Html.BeginForm("ModifikoDepartamentinPost", "Departamenti", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-6">
            @Html.HiddenFor(model => model.DepartamentiID)
            <b>Departamenti</b><br />
            @Html.TextBoxFor(item => item.Departamenti, new { @class = "form-control", @Placeholder = "Departamenti" })
        </div>
    </div>
    <br />
    <br />
    <div class="row">
        <div class="col-md-8"></div>
        <div class="col-md-4">
            <input type="submit" class="btn btn-primary" style="width:100%" value="Ruaj" />
        </div>
    </div>

}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
