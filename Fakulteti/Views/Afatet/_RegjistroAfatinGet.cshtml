@model Fakulteti.Models.Afatet.AfatiLista
@using (Html.BeginForm("RegjistroAfatinPost", "Afatet", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-6">
            <b>Afati</b><br />
            @Html.TextBoxFor(item => item.Afati, new { @class = "form-control", @Placeholder = "Afati" })
        </div>
        <div class="col-md-6">
            <b>Numri i provimeve</b><br />
            @Html.TextBoxFor(item => item.NumriProvimeve, new { @class = "form-control", @Placeholder = "Numri i provimeve" })
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-6">
            <b>Data e fillimit</b><br />
            @Html.TextBoxFor(item => item.DataFillimit, new { @class = "form-control", @Placeholder = "Data e fillimit" })
        </div>
        <div class="col-md-6">
            <b>Data e mbarimit</b><br />
            @Html.TextBoxFor(item => item.DataMbarimit, new { @class = "form-control", @Placeholder = "Data e mbarimit" })
        </div>
    </div>
    <br />

    <br />
    <div class="row">
        <div class="col-md-8"></div>
        <div class="col-md-4">
            <input type="submit" class="btn btn-primary" style="width:100%" value="Ruaj" />
        </div>
    </div>

}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>